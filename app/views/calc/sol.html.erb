<%= javascript_pack_tag 'index' %>
<div id="time">00:00:00.000</div>
<ul id="exp">
</ul>
<script type="text/javascript">
    window.onload = function() {
        timer();
        random_expgen(1, <%= @q_num %>, <%= @digit %>);
        
    }
</script>
<%= form_for(@score, url:{controller: "calc", action: "create"}, html:{id:"send"}) do |form| %>
    <%= form.hidden_field :user, :value => @username %>
    <%= form.hidden_field :total, {id: "q_num"} %>
    <%= form.hidden_field :correct, {id: "correct"} %>
<% end %>